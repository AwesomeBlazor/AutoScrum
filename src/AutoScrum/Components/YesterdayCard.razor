@using AutoScrum.Services
@using AutoScrum.AzureDevOps.Models

@inject DailyScrumService _dailyScrum
@inject OutputService _outputService

<CollapsibleCard Title="Yesterday" AnchorLink="yesterday-today">
    <WorkItemListComponent WorkItems="@_dailyScrum.Yesterday" IsOnBoard=false OnRemove="Remove"/>
</CollapsibleCard>

@code
{
    private void Remove(WorkItem workItem)
    {
        _dailyScrum.RemoveYesterday(workItem);

        _outputService.Update();
    }
}
