@using AutoScrum.AzureDevOps.Models
@using AutoScrum.Services

@inject OutputService _outputService
@inject DailyScrumService _dailyScrum

<CollapsibleCard Title="Current Sprint Work Items" AnchorLink="current-sprint">
    <WorkItemListComponent WorkItems="@_dailyScrum.WorkItems" IsOnBoard=true OnYesterday="OnYesterday" OnToday="OnToday"/>
</CollapsibleCard>

@code
{
    private void OnYesterday(WorkItem workItem)
    {
        _dailyScrum.AddYesterday(workItem);

        _outputService.Update();
    }

    private void OnToday(WorkItem workItem)
    {
        _dailyScrum.AddToday(workItem);
        
        _outputService.Update();
    }
}
