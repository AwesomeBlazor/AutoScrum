@using AutoScrum.Services
@inject OutputService _outputService

@implements IDisposable

<CollapsibleCard Title="Output" DefaultVisible AnchorLink="output">
    @_outputService.MarkupOutput
</CollapsibleCard>

@code
{
    protected override void OnInitialized() => _outputService.Updated += OnUpdated;

    private void OnUpdated(object? sender, EventArgs e) => StateHasChanged();

    public void Dispose() => _outputService.Updated -= OnUpdated;
}
