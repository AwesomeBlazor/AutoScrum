@using AutoScrum.AzureDevOps.Models

<ListGroup Flush="true">
    @if (WorkItems != null)
    {
        @foreach (var wi in WorkItems)
        {
            <WorkItemComponent WorkItem="wi" HasYesterdayButton=IsOnBoard HasTodayButton=IsOnBoard HasRemoveButton=(!IsOnBoard) OnToday=AddToday OnYesterday=OnYesterday OnRemove=OnRemove></WorkItemComponent>
        }
    }
</ListGroup>

@code {
    [Parameter]
    public List<WorkItem>? WorkItems { get; set; }

    [Parameter]
    public bool IsOnBoard { get; set; }

    [Parameter]
    public Action<WorkItem>? OnToday { get; set; } = null;

    [Parameter]
    public Action<WorkItem>? OnYesterday { get; set; } = null;

    [Parameter]
    public Action<WorkItem>? OnRemove { get; set; } = null;

    public void AddToday(WorkItem wi)
    {
        Console.WriteLine("Hey!");
        OnToday(wi);
    }
}
