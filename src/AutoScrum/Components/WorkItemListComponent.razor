@using AutoScrum.AzureDevOps.Models

@if (WorkItems?.Any() ?? false)
{
    <AntList DataSource="WorkItems">
        <WorkItemComponent WorkItem="context" HasYesterdayButton=IsOnBoard HasTodayButton=IsOnBoard HasRemoveButton=!IsOnBoard OnToday=OnToday OnYesterday=OnYesterday OnRemove=OnRemove ShowChildren=ShowChildren></WorkItemComponent>
    </AntList>
}

@code {
    [Parameter] public List<WorkItem>? WorkItems { get; set; }
    [Parameter] public bool IsOnBoard { get; set; }
    [Parameter] public Action<WorkItem>? OnToday { get; set; }
    [Parameter] public Action<WorkItem>? OnYesterday { get; set; }
    [Parameter] public Action<WorkItem>? OnRemove { get; set; }
    [Parameter] public bool ShowChildren { get; set; } = true;
}
