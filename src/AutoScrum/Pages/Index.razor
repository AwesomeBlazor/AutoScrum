@page "/"
@using AutoScrum.Components

<AntDesign.Row>
    <AntDesign.Col Xxl="@ContentSpan" Xl="@ContentSpan" Lg="ContentSpan" Md="24" Sm="24" Xs="24">

        <AutoScrumTitle />
        
        <ConnectionInfoCard ConnectionInfo="ConnectionInfo"/>
        
        <Divider/>

        @if (!IsPageInitializing)
        {
            <UsersCard/>
            
            <Divider />

            <BlockingCard/>
            
            <Divider />
            
            <CurrentSprintCard/>

            <Divider/>

            <Row>
                <AntDesign.Col Span="12" Xl="12" Md="24" Sm="24">
                    <YesterdayCard/>
                </AntDesign.Col>
                <AntDesign.Col Span="12" Xl="12" Md="24" Sm="24">
                    <TodayCard/>
                </AntDesign.Col>
            </Row>

            <Divider/>

            <OutputCard />
        }
    </AntDesign.Col>
    <AntDesign.Col Xxl="@AnchorSpan" Xl="@AnchorSpan" Lg="AnchorSpan" Md="0" Sm="0" Xs="0">
        <AutoScrumAffix />
    </AntDesign.Col>
</AntDesign.Row>