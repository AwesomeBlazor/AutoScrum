@page "/"
@using AutoScrum.Components

<AntDesign.Row>
    <AntDesign.Col Xxl="@ContentSpan" Xl="@ContentSpan" Lg="ContentSpan" Md="24" Sm="24" Xs="24">

        <AutoScrumTitle />
        
        <ConnectionInfoCard ConnectionInfo="ConnectionInfo" OnSubmit="OnConnectionSubmit"/>
        
        <Divider/>

        @if (!IsPageInitializing)
        {
            <UsersCard OnUserIncludeChanged="UserIncludeChanged"/>
            
            <Divider />

            <BlockingCard IncludedUsers="IncludedUsers" OnBlockingUpdated="UpdateOutput"/>
            
            <Divider />
            
            <CurrentSprintCard DailyScrum="_dailyScrum" OnUpdate="UpdateOutput"/>

            <Divider/>

            <Row>
                <AntDesign.Col Span="12" Xl="12" Md="24" Sm="24">
                    <YesterdayCard DailyScrum="_dailyScrum" OnRemove="UpdateOutput"/>
                </AntDesign.Col>
                <AntDesign.Col Span="12" Xl="12" Md="24" Sm="24">
                    <TodayCard DailyScrum="_dailyScrum" OnRemove="UpdateOutput"/>
                </AntDesign.Col>
            </Row>

            <Divider/>

            <OutputCard Output="@Output"/>
        }
    </AntDesign.Col>
    <AntDesign.Col Xxl="@AnchorSpan" Xl="@AnchorSpan" Lg="AnchorSpan" Md="0" Sm="0" Xs="0">
        <AutoScrumAffix />
    </AntDesign.Col>
</AntDesign.Row>